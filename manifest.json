{
    "name": "Podio AutoClicker",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Clicks on things, saves time",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["https://podio.com/skuvantagecom/studio2/apps/products-briefs/*"],
        "js": ["content-script.js"]
      }
    ]
}
